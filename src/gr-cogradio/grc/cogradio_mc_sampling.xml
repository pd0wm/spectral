<?xml version="1.0"?>
<block>
  <name>Multi-Coset Sampler</name>
  <key>cogradio_mc_sampling</key>
  <category>Cogradio</category>
  <import>import cogradio</import>
  <make>cogradio.mc_sampling($chunk_size, $n)</make>

  <param>
    <name>Chunk Size</name>
    <key>chunk_size</key>
    <value>100</value>
    <type>int</type>
  </param>

  <param>
    <name>N</name>
    <key>n</key>
    <value>14</value>
    <type>int</type>
  </param>


  <sink>
    <name>in</name>
    <type>complex</type>
    <vlen>$chunk_size</vlen>
  </sink>

  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>int($chunk_size / $n)</vlen>
  </source>
</block>
